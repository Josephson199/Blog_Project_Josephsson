<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="shortcut icon" href="~/faviconv2.ico">
    <title>Bjorn Josephson</title>   
</head>

<body>    
   <div class="header">
       <div class="headerContent">          
            <a asp-action="About" asp-controller="Home"><img class="logo" src="~/Images/BjornJosephson.png" alt="Picture of handsome man"/></a>
       </div>
       <div class="nav">
           <ul>
               <li><a asp-action="About" asp-controller="Home">About</a></li>
               <li><a asp-action="Work" asp-controller="Home">Work</a></li>
               <li><a asp-action="Blog" asp-controller="Home">Blog</a></li>
                @{ 
                    string result = "";
                    Context.Request.Cookies.TryGetValue("LoggedIn", out result);
                }
               @if (result == "LoggedIn")
               {                                
                <li><a asp-action="New" asp-controller="Admin">New</a></li>
                <li><a asp-action="Drafts" asp-controller="Admin">Drafts</a></li>
                <li><a asp-action="All" asp-controller="Admin">All</a></li>
                <li><a asp-action="Logout" asp-controller="Home">Logout</a></li>
               }
                            
               
               
           </ul>
       </div>
   </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4"><span></span></div>
                <div class="col-md-4 col-md-offset-4">
                <a href="https://www.linkedin.com/in/bjornjosephson/">
                    <i class="fa fa-linkedin-square" aria-hidden="true"></i>
                    </a>
                    <a href="https://www.facebook.com/bjorn.josephson">
                        <i class="fa fa-facebook-square" aria-hidden="true"></i>
                    </a>                    
                    <a href="https://twitter.com/BjornJosephson">
                        <i class="fa fa-twitter-square" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>
</html>
   


