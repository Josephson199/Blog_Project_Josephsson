@model Web_UI.Models.New.NewViewModel


<h2>Write a New Post</h2>

<form enctype="multipart/form-data" asp-action="New" asp-controller="Admin" method="post">
    <div class="col-md-12 well">
        <div class="form-group col-md-6">
            <label for="Title">Title</></label>
            <input type="text" class="form-control" placeholder="" asp-for="@Model.NewPost.Title" />
            <span asp-validation-for="@Model.NewPost.Title" class="text-warning"></span>
        </div>
        <div class="form-group col-md-12">
            <label for="Body" class="primaryField">Body</label>
            <textarea rows="10" class="form-control" placeholder="" asp-for="@Model.NewPost.Body" id="post-body"></textarea>
            <span asp-validation-for="@Model.NewPost.Body" class="text-warning"></span>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Upload Files</label>
                <input type="file" name="files" multiple id="file-input" onchange="insertFiles()" />
            </div>
        </div>
        <div class="col-md-12">
            <input type="submit" name="submitButton" class="btn btn-primary btn-sm" value="Save Draft" />
            <input type="submit" name="submitButton" class="btn btn-primary btn-sm" value="Publish"  />            
        </div>
    </div>
</form>

<script src="~/js/updateBody.js"></script>

